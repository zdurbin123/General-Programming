
<h1>Profile</h1>

<main>

    <h2>Welcome, {{userName}}, the time is now: {{currentTime}}. </h2>
    <br>
    <h4>Email: {{emailAddress}}</h4>
    <h4>FirstName: {{firstName}}</h4>
    <h4>LastName: {{lastName}}</h4>
    
    


<section>
    {{#if reviews.length}}
    <h2>Reviews and Ratings</h2>
    <br>
    <ul>
      {{#each reviews}}
        <h4>CharityName: {{this.charityName}}</h4>
        <li><h5>{{this.reviewText}} : {{this.rating}}</h5></li>
      {{/each}}
    </ul>
    {{/if}}
</section>

<section>
    {{#if donations.length}}
    <h2>Donations</h2>
    <br>
    <ul>
      {{#each donations}}
        <h4>CharityName: {{this.charityName}}</h4>
        <li><h5>{{this.giftName}} : {{this.giftNote}} : {{this.comments}} :: {{donateDate}}</h5></li>
      {{/each}}
    </ul>
    {{/if}}
</section>

<a href="/charities">Charities</a>
<a href="/protected">Protected</a>
<a href="/logout">Logout</a>
</main>
